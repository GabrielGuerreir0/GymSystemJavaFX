<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CadastroAulaController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Campo Nome -->
    <Label text="Nome:" />
    <TextField fx:id="nomeField" promptText="Nome da Aula" />

    <!-- Campo Data -->
    <Label text="Data:" />
    <DatePicker fx:id="dataField" />

    <!-- Campo Duração -->
    <Label text="Duração (min):" />
    <TextField fx:id="duracaoField" promptText="Duração em minutos" />

    <!-- Campo Personal Trainer -->
    <Label text="Personal:" />
    <ComboBox fx:id="personalComboBox" />

    <!-- Botão Registrar -->
    <Button text="Registrar" onAction="#handleRegistrarAula" style="-fx-background-color: #333; -fx-text-fill: white;" />
</VBox>
