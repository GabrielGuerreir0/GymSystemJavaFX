<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="505.0" prefWidth="450.0" spacing="10" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CadastroAulaController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
   <HBox prefHeight="52.0" prefWidth="410.0">
      <children>
      
          <!-- Campo Nome -->
          <Label prefHeight="17.0" prefWidth="93.0" text="Nome:">
            <padding>
               <Insets right="50.0" />
            </padding>
         </Label>
          <TextField fx:id="nomeField" style="-fx-background-color: #989494;">
            <HBox.margin>
               <Insets />
            </HBox.margin>
         </TextField>
      </children>
      <padding>
         <Insets left="100.0" />
      </padding>
   </HBox>
   <HBox prefHeight="50.0" prefWidth="310.0">
      <children>
      
          <!-- Campo Data -->
          <Label text="Data:" />
          <DatePicker fx:id="dataField" style="-fx-background-color: #989494;">
            <HBox.margin>
               <Insets left="67.0" />
            </HBox.margin>
         </DatePicker>
      </children>
      <VBox.margin>
         <Insets left="100.0" />
      </VBox.margin>
   </HBox>
   <HBox prefHeight="49.0" prefWidth="240.0">
      <children>
      
          <!-- Campo Duração -->
          <Label prefHeight="17.0" prefWidth="161.0" text="Duração (min):" />
          <TextField fx:id="duracaoField" prefHeight="25.0" prefWidth="201.0" style="-fx-background-color: #989494;">
            <HBox.margin>
               <Insets left="30.0" />
            </HBox.margin>
         </TextField>
      </children>
      <VBox.margin>
         <Insets left="70.0" right="80.0" />
      </VBox.margin>
   </HBox>
   <HBox prefHeight="100.0" prefWidth="500.0">
      <children>
      
                            <!-- Campo Personal Trainer -->
          <Label text="Personal:">
            <HBox.margin>
               <Insets />
            </HBox.margin>
         </Label>
          <ComboBox fx:id="personalComboBox" prefHeight="25.0" prefWidth="129.0" style="-fx-background-color: #989494;">
            <HBox.margin>
               <Insets left="69.0" />
            </HBox.margin>
         </ComboBox>
      </children>
      <VBox.margin>
         <Insets left="80.0" right="80.0" />
      </VBox.margin>
   </HBox>

    <!-- Botão Registrar -->
    <Button onAction="#handleRegistrarAula" prefHeight="33.0" prefWidth="146.0" style="-fx-background-color: #333; -fx-text-fill: white;" text="Registrar" />
</VBox>
