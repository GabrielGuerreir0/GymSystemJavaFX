<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CadastroPersonalController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Campo Nome -->
    <Label text="Nome:" />
    <TextField fx:id="nomeField" promptText="Nome" />

    <!-- Campo CPF -->
    <Label text="CPF:" />
    <TextField fx:id="cpfField" promptText="000.000.000-00" />

    <!-- Campo Telefone -->
    <Label text="Telefone:" />
    <TextField fx:id="telefoneField" promptText="(88) 9 0000-0000" />

    <!-- Campo Email -->
    <Label text="Email:" />
    <TextField fx:id="emailField" promptText="email@example.com" />

    <!-- Campo Registro Profissional -->
    <Label text="Registro Profissional:" />
    <TextField fx:id="registroProfField" promptText="Registro Profissional" />

    <!-- Campo Especialidade -->
    <Label text="Especialidade:" />
    <TextField fx:id="especialidadeField" promptText="Especialidade" />

    <!-- BotÃ£o Registrar -->
    <Button text="Registrar" onAction="#handleRegistrarPersonal" style="-fx-background-color: #333; -fx-text-fill: white;" />
</VBox>
