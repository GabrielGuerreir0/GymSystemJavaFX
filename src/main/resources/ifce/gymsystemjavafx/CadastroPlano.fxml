<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CadastroPlanoController">
    <children>
        <Label layoutX="50.0" layoutY="30.0" text="Tipo:" />
        <TextField fx:id="txtTipo" layoutX="120.0" layoutY="30.0" prefWidth="200.0" />

        <Label layoutX="50.0" layoutY="70.0" text="Valor:" />
        <TextField fx:id="txtValor" layoutX="120.0" layoutY="70.0" prefWidth="200.0" />

        <Label layoutX="50.0" layoutY="110.0" text="Descrição:" />
        <TextField fx:id="txtDescricao" layoutX="120.0" layoutY="110.0" prefWidth="200.0" />

        <Button layoutX="120.0" layoutY="160.0" text="Salvar" onAction="#salvarPlano" />
    </children>
</AnchorPane>
